<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Speed_Test_MAUI.Pages.SplashPage"
             BackgroundColor="#7C4DFF">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
        <Label x:Name="TitleLabel" Text="Internet Speed Test" FontSize="36" FontAttributes="Bold" Opacity="0" Scale="0.8"/>
        <Label x:Name="LoadingLabel" Text="Loading..." FontSize="20" Opacity="0"/>
    </VerticalStackLayout>
</ContentPage>